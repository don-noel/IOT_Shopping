@model IOT_Shopping.Models.Produit

@{
    ViewData["Title"] = "Ajouter un Produit";
}

<h2>Ajouter un Produit</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" required />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" class="form-control" required />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- ✅ Liste déroulante dynamique pour la catégorie -->
    <div class="form-group">
        <label asp-for="Categorie"></label>
        <select asp-for="Categorie" class="form-control" required>
            <option value="">Sélectionner une catégorie</option>
            @foreach (var categorie in ViewBag.Categories)
            {
                <option value="@categorie">@categorie</option>
            }
        </select>
        <span asp-validation-for="Categorie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image du produit</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <br/>
    <button type="submit" class="btn btn-success ajouter">Ajouter</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
