@model IOT_Shopping.Models.Produit

@{
    ViewData["Title"] = "Modifier un Produit";
}

<h2>Modifier un Produit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" required />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" class="form-control" required />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
