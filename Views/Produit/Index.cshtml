@model IEnumerable<IOT_Shopping.Models.Produit>

@{
    ViewData["Title"] = "Liste des Produits";
}

<h2 class="liste-produit">Liste des Produits</h2>

<a href="@Url.Action("Create", "Produit")" class="btn btn-success produit">Ajouter un Produit</a>
<br/>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Nom</td>
                <td>@produit.Prix</td>
                <td>@produit.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(produit.Image))
                    {
                        <img src="~/images/@produit.Image" alt="@produit.Nom" width="100" height="100" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Produit", new { id = produit.Id })" class="btn btn-warning">Modifier</a>
                    <a href="@Url.Action("Delete", "Produit", new { id = produit.Id })" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
