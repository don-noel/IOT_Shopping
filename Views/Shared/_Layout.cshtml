<!-- Début du document HTML -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IOT_Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IOT_Shopping.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Barre de navigation (<nav>) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IOT_Shopping</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white mx-1" asp-area="" asp-controller="Commande" asp-action="Create">Passer une commande</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white mx-1" asp-area="" asp-controller="Commande" asp-action="Index">Voir les Commandes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white mx-1" asp-area="" asp-controller="Produit" asp-action="Index">Voir les Produits</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- Footer amélioré -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <!-- Colonne 1 (IOT_Shopping) -->
                <div class="col-md-6">
                    <h5 class="fw-bold">IOT_Shopping</h5>
                    <p>Le meilleur des objets connectés à portée de main.</p>
                    <p><i class="bi bi-geo-alt"></i> 801 Aviation Pkway, Ottawa</p>
                    <p><i class="bi bi-telephone"></i> (613) 000-0000</p>
                    <p><i class="bi bi-envelope"></i> contact@iotshopping.com</p>
                </div>

                <!-- Colonne 2 (Liens rapides) -->
                <div class="col-md-6 text-md-end">
                    <h5 class="fw-bold">Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark">Capteurs IOT</a></li>
                        <li><a href="#" class="text-dark">Objets connectés</a></li>
                        <li><a href="#" class="text-dark">Systèmes domotiques</a></li>
                        <li><a href="#" class="text-dark">Cartes de commandes</a></li>
                    </ul>
                </div>
            </div>
            <br/>


            <hr> <!-- Séparation entre les blocs -->

            <div class="footer-bottom">
                <div class="footer-container">
                    <!-- Copyright -->
                    <div class="text-start">
                        <p class="mb-0">IOT_Shopping - Tous droits réservés</p>
                    </div>

                    <!-- Moyens de paiement -->
                    <div class="footer-payment-icons">
                        <img src="~/images/visa.webp" alt="Visa" width="50">
                        <img src="~/images/mastercard.png" alt="MasterCard" width="50">
                        <img src="~/images/paypal.png" alt="PayPal" width="50">
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Script pour afficher le bouton "Retour en haut" -->
    <script>
        let backToTopButton = document.getElementById("backToTop");

        window.onscroll = function () {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                backToTopButton.style.display = "block";
            } else {
                backToTopButton.style.display = "none";
            }
        };

        function topFunction() {
            window.scrollTo({ top: 0, behavior: "smooth" });
        }
    </script>
</body>
</html>
